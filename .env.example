# Domain für die statischen Seiten
DOMAIN_NAME=staticpub.example.de

# E-Mail für Let's Encrypt Zertifikate
ACME_EMAIL=admin@example.de

# Garage RPC Secret (generieren mit: openssl rand -hex 32)
GARAGE_RPC_SECRET=

# Garage Admin Token (generieren mit: openssl rand -hex 32)
GARAGE_ADMIN_TOKEN=

# S3-Bucket-Name fuer die statischen Dateien
BUCKET_NAME=static-publishing

# S3-Endpoint (Standard: localhost fuer lokale Deployments)
S3_ENDPOINT=http://localhost:3900

# AWS-Credentials fuer deploy.sh (werden von init.sh ausgegeben)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
